<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<File
			name="ptd-web-scheduler"
			fileName="ptd-web-scheduler.log"
			append="false">
			<PatternLayout pattern="%t %-5p %c{1.} - %m%n" />
		</File>
		<Console
			name="STDOUT"
			target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger
			name="app.ptd"
			level="debug">
			<AppenderRef ref="ptd-web-scheduler" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
