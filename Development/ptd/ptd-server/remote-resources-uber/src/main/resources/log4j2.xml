<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console
			name="stdout"
			target="SYSTEM_OUT">
			<!--PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n" / -->
      <JsonTemplateLayout eventTemplateUri="classpath:ecs.json"/>
		</Console>
	</Appenders>
	<Loggers>
		<Logger
			name="app.ptd"
			level="debug">
			<AppenderRef ref="stdout" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="stdout" />
		</Root>
	</Loggers>
</Configuration>
